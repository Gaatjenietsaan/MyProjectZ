<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Design.NoActionBar"
        tools:context=".ThirdActivity"
        android:background="@drawable/color2">

    <ImageButton
        android:id="@+id/messageboard_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prikbord_text"
        app:srcCompat="@mipmap/ic_thought"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="64dp" />

    <ImageButton
        android:id="@+id/teacher_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/classroom_Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="140dp"
        app:srcCompat="@mipmap/ic_owl"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="242dp" />

    <ImageButton
        android:id="@+id/classroom_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="160dp"
        app:srcCompat="@mipmap/ic_back2school"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
            android:text="Prikbord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_messageboard"
        android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/messageboard_Button"
            app:layout_constraintStart_toStartOf="@+id/messageboard_Button"
            app:layout_constraintEnd_toEndOf="@+id/messageboard_Button"
        android:fontFamily="cursive"
            android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
            android:textColor="@color/design_default_color_on_secondary"/>

    <TextView
            android:text="Leerkracht chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/teacher_Button"
            app:layout_constraintStart_toStartOf="@+id/teacher_Button"
            app:layout_constraintEnd_toEndOf="@+id/teacher_Button"
        android:id="@+id/textView_teacher"
            android:fontFamily="cursive"
        android:textSize="24sp"
        android:textAlignment="center"
            android:textStyle="bold"
        android:textColor="@color/design_default_color_on_secondary"/>

    <TextView
            android:text="Klaslokaal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_classroom"
        android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/classroom_Button"
            app:layout_constraintStart_toStartOf="@+id/classroom_Button"
            app:layout_constraintEnd_toEndOf="@+id/classroom_Button"
        android:fontFamily="cursive"
        android:textSize="24sp"
            android:textStyle="bold"
        android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"/>
</GridLayout>